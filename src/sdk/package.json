{
    "private": true,
    "version": "0.0.0",
    "name": "@polymedia/xdrop-sdk",
    "author": "@juzybits (https://polymedia.app)",
    "homepage": "https://xdrop.polymedia.app",
    "description": "Cross-chain airdrop system on Sui",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/juzybits/polymedia-xdrop"
    },
    "keywords": [
        "polymedia",
        "sui",
        "xdrop"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
        "clean": "rm -rf dist/ node_modules/ .turbo/ .wrangler/",
        "dev": "tsc --watch -p tsconfig.esm.json",
        "lint": "eslint src/ --report-unused-disable-directives --max-warnings 0",
        "prepublishOnly": "rm -rf dist/ && pnpm build",
        "typecheck": "tsc -p tsconfig.esm.json"
    },
    "dependencies": {
        "@polymedia/suitcase-core": "^0.0.35"
    },
    "peerDependencies": {
        "@mysten/sui": "^1.14.2"
    },
    "devDependencies": {
        "typescript": "^5.6.3"
    },
    "type": "module",
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/"
    ],
    "types": "./dist/esm/index.d.ts",
    "module": "./dist/esm/index.js",
    "main": "./dist/cjs/index.js",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        }
    }
}
